<h1>New Game</h1>
<% @picked_chars.each do |char| %>
  <div><%= char %></div>
<% end %>
<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <input type="text" class="input_box" name="word" value="<%= params[:word] %>">
  <input type="submit" class="btn" value="Play">
  <%= hidden_field_tag :picked_chars, @picked_chars %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
